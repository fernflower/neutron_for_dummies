# disable nove networking
disable_service n-net
# enable neutron
enable_service q-svc q-agt q-dhcp q-l3 q-meta

enable_plugin networking-ovs-dpdk https://review.openstack.org/openstack/networking-ovs-dpdk master # enable appropriate plugin to be downloaded and used in OpenStack
OVS_NUM_HUGEPAGES=1024 # set up the hugepages amount on the host
OVS_DATAPATH_TYPE=netdev # set up appropriate dapatath type (netdev used for DPDK application)
OVS_LOG_DIR=/opt/stack/logs # specify logging directory for OVS

